extends layout

block scripts
    link(href='/stylesheets/css/bootstrap.min.css', rel='stylesheet')
    //link(rel='stylesheet', href='/stylesheets/grid.css')
    link(rel='stylesheet', href='/stylesheets/dashboard.css')
    link(rel='stylesheet', href='/stylesheets/exjobb.css')
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.min.js")
    script(src='/javascripts/exlistcontroller.js')

block content
    .container
      // Static navbar
      nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='#') Allaexjobb
          #navbar.navbar-collapse.collapse
            ul.nav.navbar-nav
              li.active
                a(href='#') Home
              li
                a(href='#') About
              li
                a(href='#') Contact
              li.dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown', role='button', aria-haspopup='true', aria-expanded='false')
                  | Dropdown 
                  span.caret
                ul.dropdown-menu
                  li
                    a(href='#') Action
                  li
                    a(href='#') Another action
                  li
                    a(href='#') Something else here
                  li.divider(role='separator')
                  li.dropdown-header Nav header
                  li
                    a(href='#') Separated link
                  li
                    a(href='#') One more separated link
            ul.nav.navbar-nav.navbar-right
              li.active
                a(href='./')
                  | Default 
                  span.sr-only (current)
              li
                a(href='../navbar-static-top/') Static top
              li
                a(href='../navbar-fixed-top/') Fixed top
          // /.nav-collapse
        // /.container-fluid

    .container(ng-app='myApp', ng-controller='exjobbCtrl')
      .jumbotron.bkimg
          form.navbar-form.navbar-center(role='search', align='center', style='padding-top:60px')
                .form-group
                  input.form-control(type='text', placeholder='Ort, ämne, företag...', ng-model='query')
          div
            br 
            br

          

       
      .panel.panel-default
          .panel-heading
            .panel-title Lista över Exjobb
          .panel-body
            
            
            
              | Antal träffar: {{result.length}}

              // {'company' : lastName} as result // Alternativ filtrering utan custom fuction
              div(ng-repeat="x in myWelcome | filter : filterList as result")
            
              
            
                  .row.exjobb
                      a(href = "{{x.link}}")
                        .col-md-4.col-xs-12
                          | <b>{{x.company}}</b>
                          br
                          | {{x.title}}
                        .col-md-4.col-xs-12 <br>{{x.location}}
                  hr
                                  
      h2.sub-header Section title


    